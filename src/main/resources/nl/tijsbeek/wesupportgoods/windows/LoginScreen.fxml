<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="nl.tijsbeek.wesupportgoods.windows.LoginScreen">
    <GridPane prefHeight="360.0" prefWidth="320.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="10"/>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="80.0"/>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="10"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="15.0" vgrow="SOMETIMES"/>
            <RowConstraints percentHeight="40.0" vgrow="SOMETIMES"/>
            <RowConstraints percentHeight="40.0" vgrow="SOMETIMES"/>
            <RowConstraints percentHeight="5.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Text text="Inloggen" textAlignment="CENTER" GridPane.columnIndex="1">
            <font>
                <Font size="18.0"/>
            </font>
        </Text>

        <Pane fx:id="loginPane" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="2">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="80.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints percentHeight="7.0" vgrow="SOMETIMES"/>
                    <RowConstraints percentHeight="15.0" vgrow="SOMETIMES"/>
                    <RowConstraints percentHeight="15.0" vgrow="SOMETIMES"/>
                    <RowConstraints percentHeight="7.0" vgrow="SOMETIMES"/>
                    <RowConstraints percentHeight="15.0" vgrow="SOMETIMES"/>
                    <RowConstraints percentHeight="15.0" vgrow="SOMETIMES"/>
                    <RowConstraints percentHeight="7.0" vgrow="SOMETIMES"/>
                    <RowConstraints percentHeight="15.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Text text="Gebruikersnaam" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Text>
                <TextField fx:id="usernameTextField" prefHeight="26.0" prefWidth="204.0"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Text text="Wachtwoord" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Text>
                <TextField fx:id="passwordTextField" prefHeight="23.0" prefWidth="204.0"
                           GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <Button mnemonicParsing="false" onAction="#onButtonClick"
                        prefHeight="34.0" prefWidth="204.0" text="Inloggen" GridPane.columnIndex="1"
                        GridPane.rowIndex="7"/>
            </GridPane>
        </Pane>

    </GridPane>
</AnchorPane>
